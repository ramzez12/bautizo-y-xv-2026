          .fromTo("#flores-der", { opacity: 0, x: 60 }, { opacity: 1, x: 0, duration: 1.5 }, "-=1.5")
          .fromTo("#fecha-boda", { opacity: 0 }, { opacity: 1, duration: 1 }, "-=0.5")
          .fromTo("#oracion-texto", { opacity: 0, y: 20 }, { opacity: 1, y: 0, duration: 1 }, "-=0.5");
